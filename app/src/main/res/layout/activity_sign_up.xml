<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/relativelayout"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_weight=".5"
                    android:background="@drawable/accessories_text_editor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="22dp"
                    android:layout_weight="2.5"
                    android:text="Become a Borrower"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/amount_to_borrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:cursorVisible="true"
                android:hint="Amount to Borrow (Rs.25,000 - 5,00,000)"
                android:inputType="number"
                android:lines="1"
                android:paddingLeft="6dp"
                android:textSize="16dp"
                android:imeOptions="actionDone"
                app:met_baseColor="@color/black"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="Amount to Borrow (Rs.25,000 - 5,00,000)"
                app:met_primaryColor="@color/blue"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/gray"
                app:met_underlineColor="@color/gray" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/loan_purpose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:windowSoftInputMode="stateAlwaysHidden"
                app:met_errorColor="@color/red"
                app:ms_alignLabels="false"
                app:ms_arrowSize="0dp"
                app:ms_enableFloatingLabel="true"
                app:ms_floatingLabelColor="@android:color/darker_gray"
                app:ms_floatingLabelText="Loan Purpose"
                app:ms_highlightColor="@color/blue"
                app:ms_hint="Loan Purpose"
                app:ms_thickness=".5dp" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/roi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:windowSoftInputMode="stateAlwaysHidden"
                app:met_errorColor="@color/red"
                app:ms_alignLabels="false"
                app:ms_arrowSize="0dp"
                app:ms_enableFloatingLabel="true"
                app:ms_floatingLabelColor="@android:color/darker_gray"
                app:ms_floatingLabelText="Expected Interest Rate(in %)"
                app:ms_highlightColor="@color/blue"
                app:ms_hint="Expected Interest Rate(in %)"
                app:ms_thickness=".5dp" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/loan_duration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:windowSoftInputMode="stateAlwaysHidden"
                app:met_errorColor="@color/red"
                app:ms_alignLabels="false"
                app:ms_arrowSize="0dp"
                app:ms_enableFloatingLabel="true"
                app:ms_floatingLabelColor="@android:color/darker_gray"
                app:ms_floatingLabelText="Loan Duration(in Months)"
                app:ms_highlightColor="@color/blue"
                app:ms_hint="Loan Duration(in Months)"
                app:ms_thickness=".5dp" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/loan_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:windowSoftInputMode="stateAlwaysHidden"
                app:met_errorColor="@color/red"
                app:ms_alignLabels="false"
                app:ms_arrowSize="0dp"
                app:ms_enableFloatingLabel="true"
                app:ms_floatingLabelColor="@android:color/darker_gray"
                app:ms_floatingLabelText="Loan City"
                app:ms_highlightColor="@color/blue"
                app:ms_hint="Loan City"
                app:ms_thickness=".5dp" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:windowSoftInputMode="stateAlwaysHidden"
                app:met_errorColor="@color/red"
                app:ms_alignLabels="false"
                app:ms_arrowSize="0dp"
                app:ms_enableFloatingLabel="true"
                app:ms_floatingLabelColor="@android:color/darker_gray"
                app:ms_floatingLabelText="Title"
                app:ms_highlightColor="@color/blue"
                app:ms_hint="Title"
                app:ms_thickness=".5dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:lines="1"
                android:paddingLeft="6dp"
                android:textSize="16dp"
                app:met_baseColor="@color/black"
                app:met_clearButton="false"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="First Name"
                app:met_primaryColor="@color/colorPrimary"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/gray"
                app:met_underlineColor="@color/gray" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:lines="1"
                android:maxLength="10"
                android:paddingLeft="6dp"
                android:textAllCaps="true"
                android:textSize="16dp"
                app:met_baseColor="@color/black"
                app:met_clearButton="false"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="Last Name"
                app:met_iconPadding="0dp"
                app:met_primaryColor="@color/colorPrimary"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/gray"
                app:met_underlineColor="@color/gray" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:paddingLeft="6dp"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:windowSoftInputMode="stateHidden"
                app:met_baseColor="@color/black"
                app:met_clearButton="false"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="Email"
                app:met_primaryColor="@color/colorPrimary"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/gray"
                app:met_underlineColor="@color/gray" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Create a Password"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="6dp"
                android:textSize="16dp"
                app:met_baseColor="@color/black"
                app:met_clearButton="false"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="Create a Password"
                app:met_primaryColor="@color/colorPrimary"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/gray"
                app:met_underlineColor="@color/gray" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Mobile No."
                android:inputType="phone"
                android:lines="1"
                android:maxLength="10"
                android:paddingLeft="6dp"
                android:textSize="16dp"
                app:met_baseColor="@color/black"
                app:met_clearButton="false"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="Mobile No."
                app:met_iconPadding="0dp"
                app:met_primaryColor="@color/colorPrimary"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/gray"
                app:met_underlineColor="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="I have read and agree to the Privacy Policy , Terms of Use and Consent to Electronic Disclosures "
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/lime"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:textColor="@color/black"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:textColor="@color/black"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/lime"
                android:text="SignUp"
                android:textColor="@color/white" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>